{% extends 'micro/random.html.twig' %}

{% block intro %}
    <div class="container">

        <div class="row">
            <div class="text-center">
            <div class="col-sm-12" style="margin-top: 100px">
                <h2>Оценка работы компании</h2><br>
            </div>
            </div>
        </div>

        <div class="row">

            <div class="col-sm-7">
                <table class="table">
                    {% for comment in comment %}
                    <tr>
                        <td>
                            <div class="col-xs-2">
                            <div class="thumbnail">
                                    <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                                </div><!-- /thumbnail -->
                            </div><!-- /col-sm-2 -->

                            <div class="col-xs-10">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <strong>{{  comment.name }}</strong>
                                    </div>
                                    <div class="panel-body">
                                        {{ comment.comment }}
                                    </div><!-- /panel-body -->
                                </div><!-- /panel panel-default -->
                            </div><!-- /col-sm-5 -->
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-sm-5">
                <div class="widget-area no-padding blank">
                    <div class="status-upload">
                        <div class="text-center">
                            <h2 style="background-color: #f7f7f7">Оставьте Ваш отзыв</h2>
                            <br>

                                {{ form_start(form, { 'action': path('reviews'), 'method': 'POST'   }) }}
                                {{ form_errors(form) }}

                                <div class="form">
                                    {{ form_label(form.name, 'Введите Ваше имя:') }}
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name)}}

                                    {{ form_label(form.comment, 'Прокомментируйте нашу работу:') }}
                                    {{ form_errors(form.comment) }}
                                    {{ form_widget(form.comment)}}
                                </div>

                                {{ form.submit.vars.submit }}
                                {{ form_row(form.submit, { 'label': 'Добавить комментарий' })}}

                                 {{ form_rest(form) }}
                                <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /container -->
{% endblock %}